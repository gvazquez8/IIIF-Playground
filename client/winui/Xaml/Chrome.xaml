<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="PlaygroundClient.Xaml.Chrome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PlaygroundClient.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="UriFieldMenuEditButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid ColumnDefinitions="2*,8*" RowDefinitions="*, 7*"
      ColumnSpacing="18" RowSpacing="21"
      Padding="20,30" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}">
        <Grid.Resources>
            <Flyout x:Name="RegionParametersFlyout">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <NumberBox Header="X" Value="{x:Bind _viewModel.ImageUriViewModel.RegionX, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                    <NumberBox Header="Y" Value="{x:Bind _viewModel.ImageUriViewModel.RegionY, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                    <NumberBox Header="Width" Value="{x:Bind _viewModel.ImageUriViewModel.RegionWidth, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                    <NumberBox Header="Height" Value="{x:Bind _viewModel.ImageUriViewModel.RegionHeight, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                </StackPanel>
            </Flyout>
            <Flyout x:Name="SizeParametersFlyout">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <NumberBox Header="Width" Value="{x:Bind _viewModel.ImageUriViewModel.SizeWidth, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                    <NumberBox Header="Height" Value="{x:Bind _viewModel.ImageUriViewModel.SizeHeight, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
                </StackPanel>
            </Flyout>
            <Flyout x:Name="RotationParameterFlyout">
                <StackPanel Orientation="Vertical" Spacing="5">
                    <Slider Header="Rotation" Value="{x:Bind _viewModel.ImageUriViewModel.Rotation, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                            Minimum="0" Maximum="360" StepFrequency="1" TickFrequency="180" TickPlacement="Outside"/>
                    <CheckBox Content="Mirror" IsChecked="{x:Bind _viewModel.ImageUriViewModel.Mirror, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"/>
                </StackPanel>
            </Flyout>
        </Grid.Resources>

        <Grid Grid.Column="0" Grid.Row="0" 
          CornerRadius="30" Padding="10"
          Background="{ThemeResource LayerFillColorDefaultBrush}">
            <TextBlock Text="IIIF Image Viewer" 
                       Style="{StaticResource TitleTextBlockStyle}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="0" 
          CornerRadius="30" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{x:Bind _viewModel.ImageUriViewModel.ImageUri, Mode=OneWay}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Text="{x:Bind _viewModel.ImageUriViewModel.ImageUri, Mode=OneWay}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Style="{StaticResource SubtitleTextBlockStyle}"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" 
              RowDefinitions="*,Auto"
              CornerRadius="30" Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Image x:Name="CurrentImage" Grid.Row="0"
                   Source="{x:Bind ConvertToBitmap(_viewModel.ImageBase64), Mode=OneWay}"/>
            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" HorizontalScrollMode="Auto" Padding="10">
                <StackPanel Orientation="Horizontal" Spacing="8" Padding="8" HorizontalAlignment="Center">
                    <Button x:Name="EditRegionButton" 
                            Style="{StaticResource UriFieldMenuEditButtonStyle}"
                            Content="Edit Region" 
                            Flyout="{x:Bind RegionParametersFlyout}"/>
                    <Button x:Name="EditSizeButton" 
                            Style="{StaticResource UriFieldMenuEditButtonStyle}"
                            Content="Edit Size"
                            Flyout="{x:Bind SizeParametersFlyout}"/>
                    <Button x:Name="EditRotationButton" 
                            Style="{StaticResource UriFieldMenuEditButtonStyle}"
                            Content="Edit Rotation" 
                            Flyout="{x:Bind RotationParameterFlyout}"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <local:EditRegionParameterContentDialog x:Name="EditRegionParameterContentDialog"/>
    </Grid>
</UserControl>
